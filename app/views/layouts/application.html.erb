  <body class="<%= yield (:body_class) %>">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P37MJCT"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <% if flash[:notice] %>
      <div class="notification is-success global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="notification is-danger global-notification">
      <p class="alert"><%= alert %></p>
    </div>
     <% end %>
      <div class="columns is-centered">
        <div class="column is-one-quarter">
         <div class="field has-addons">
            <div class="control">
                <%= form_tag job_search_path(@jobs),  method: :get do %>
                <%= text_field_tag :search, nil, placeholder: "Search Posts", class: "input searchInput" %>
            </div>
            <div class="control">
                <%= submit_tag "Search", class:"button searchButton"%>
                <% end %>
            </div>
          </div>
        </div>
      </div>
     <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class:"navbar-item" do %>
          <%= link_to image_tag("XR-Loaded-Logo.png", alt: "logo"), '/', class: 'mt1 appLogo' %>
         
        <% end  %>
         <img scr="/rails_project/job_board/app/assets/images/XR-Loaded-Logo.png"/>
        <div class="navbar-burger burger" data-target="navbar">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbar" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
            <p class="control">
              <%= link_to 'Post Job', new_job_path, class: "navbar-item button is-rounded" %>
            </p>
            <% if user_signed_in? %>

              <div class="navbar-item has-dropdown is-hoverable">
                <%= link_to 'Account', edit_user_registration_path, class: "navbar-link" %>
                <div class="navbar-dropdown is-right">
                  <%= link_to current_user.name, edit_user_registration_path, class:"navbar-item" %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"navbar-item" %>
                </div>
              </div>
            <% else %>
            <p class="control">
              <%= link_to "Sign In", new_user_session_path, class:"navbar-item button signUpSignInButton" %>
            </p>
            <p class="control" id="signUpButton" onclick=”ga(‘send’, ‘event’, ‘Navbar’, ‘Click’, ‘Sign Up’, ‘10’);”>
              <%= link_to "Sign up", new_user_registration_path, class:"navbar-item button signUpSignInButton"%>
            </p>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    
    
  </nav>
    
    
  <%= yield %>

  <footer class="footer">
    <div class="container">
      <div class="columns">
        <div class="column is-two-thirds">
            <%= link_to root_path do %>
                  <%= link_to image_tag("XR-Loaded-white.png", alt: "logo"), '/', class: 'appLogo' %>
            <% end  %>
             <div id="footerImage">
              <%= image_tag 'https://xrloadedstorage.s3.amazonaws.com/weird-science-stars-anthony-michael-hall-kelly-le-brock-reveal-how-they-truly-feel-about-planned-reboot-post-2.jpg' %>
             </div>
             <p class="footerText" style="color:#fff;">
                  We're live and making adjustments as we go.</br>
                  <a href="mailto:contact@xrloaded.com">Please let us know if you have any suggestions!</a>
             </p>
         </div>
        <div class="column is-two-thirds">
           <h1 class="footerTextLabels" style="color:#fff;">Seeking</h1>
           <h2 class="footerTextLinks" style="color:#fff;">
             <%= link_to "Find a Job", jobs_path, {:style=>'color:#FFFFFF;'} %>
           </h2></br>
           <h1 class="footerTextLabels" style="color:#fff;">Hiring</h1>
             <h2 class="footerTextLinks" style="color:#fff;">
                 <%= link_to "Post a Job", new_job_path, {:style=>'color:#FFFFFF;'} %>
             </h2>
             <h2 class="footerTextLinks" style="color:#fff;">
                 <%= link_to "Sign In", new_user_session_path, {:style=>'color:#FFFFFF;'} %>
             </h2>
             <h2 class="footerTextLinks" style="color:#fff;">
                 <%= link_to "Sign Up", new_user_registration_path, {:style=>'color:#FFFFFF;'} %>
             </h2>
         </div>
         <div class="column is-two-thirds">
            <h1 class="footerTextLabels" style="color:#fff;">Useful Links</h1>
            <h2 class="footerTextLinks" style="color:#fff;">
                 <%= link_to "Privacy Policy", privacy_path, {:style=>'color:#FFFFFF;'} %>
             </h2>
         </div>
      </div>
    </div>
   
   
  </footer>
    <%= javascript_include_tag 'application', "https://js.stripe.com/v2/", "https://js.stripe.com/v3/", 'data-turbolinks-track': 'reload' %>

  </body>
</html>